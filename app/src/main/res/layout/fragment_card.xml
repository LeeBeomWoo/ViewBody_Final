<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/backline"
    android:orientation="horizontal"
    android:padding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp">

        <WebView
            android:id="@+id/faceimage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/category_txtB"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/nickname_txtB"
            android:layout_toEndOf="@+id/nick_lbl"
            android:ems="10"
            android:padding="5dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/nickname_txtB"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/nick_lbl"
            android:ems="10"
            android:padding="5dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/nick_lbl"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/nickname_txtB"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/faceimage"
            android:padding="7dp"
            android:text="@string/nickname"
            android:textAlignment="viewEnd"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/category_lbl"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/category_txtB"
            android:layout_below="@+id/nick_lbl"
            android:layout_toEndOf="@+id/faceimage"
            android:padding="7dp"
            android:text="@string/expertpart"
            android:textAlignment="viewEnd"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/writer_selfintrd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/faceimage" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
